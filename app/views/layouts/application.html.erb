<!DOCTYPE html>
<html>
<head>
  <title>SignupApp</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">	    
		<div id="navigation">
			<%= link_to "New Signup", new_account_path %> | <%= link_to "View Signups", accounts_path %>
		</div>  
		
		<% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	    <% end %>
		<%= yield %>	
	</div>

</body>
</html>
