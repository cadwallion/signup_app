<h1>Search</h1>

<%= form_tag search_accounts_path do %>
	<select name="search[type]">
		<option value="first_name">First Name</option>
		<option value="last_name">Last Name</option>
		<option value="email">Email</option>
	</select>
	<%= text_field_tag "search[term]", @search[:term] %>
<% end %>

<% if @accounts.size > 0 %>

<p class="results">Results for search '<%= @search[:term] %></p>

<table cellpadding="4" cellspacing="0" border="1">
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>City</th>
		<th>State</th>
		<th>Postal</th>
		<th>Phone</th>
		<th>Email</th>
		<th>Tools</th>
	</tr>
<% @accounts.each do |account| %>
	<tr>
		<td><%= account.first_name %></td>
		<td><%= account.last_name %></td>
		<td><%= account.address %></td>
		<td><%= account.city %></td>
		<td><%= account.state %></td>
		<td><%= account.postal %></td>
		<td><%= account.formatted_phone %></td>
		<td><%= account.email %></td>
		<td><%= link_to "Edit", edit_account_path(account) %> | <%= link_to "Delete", account, :confirm => "Are you sure?", :method => :delete %></td>
	</tr>
<% end %>
</table>

<% else %>
<p>No results found.</p>
<% end %>